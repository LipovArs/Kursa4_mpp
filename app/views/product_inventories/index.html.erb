<p id="notice"><%= notice %></p>

<h1>Product Inventories</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_inventories.each do |product_inventory| %>
      <tr>
        <td><%= product_inventory.product_id %></td>
        <td><%= product_inventory.price %></td>
        <td><%= product_inventory.quantity %></td>
        <td><%= link_to 'Show', product_inventory %></td>
        <td><%= link_to 'Edit', edit_product_inventory_path(product_inventory) %></td>
        <td><%= link_to 'Destroy', product_inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


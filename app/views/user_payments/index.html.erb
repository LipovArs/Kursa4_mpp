<p id="notice"><%= notice %></p>

<h1>User Payments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Code</th>
      <th>Cvv</th>
      <th>Date</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_payments.each do |user_payment| %>
      <tr>
        <td><%= user_payment.user_id %></td>
        <td><%= user_payment.code %></td>
        <td><%= user_payment.cvv %></td>
        <td><%= user_payment.date %></td>
        <td><%= user_payment.name %></td>
        <td><%= link_to 'Show', user_payment %></td>
        <td><%= link_to 'Edit', edit_user_payment_path(user_payment) %></td>
        <td><%= link_to 'Destroy', user_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Payment', new_user_payment_path %>
